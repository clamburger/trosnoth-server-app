<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_90"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name_long"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" android:layout_below="@id/textTitle" android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/textServerIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_server"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editServerIP"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/connection_server"
            android:inputType="phone"
            android:typeface="monospace"
            android:width="180sp" />

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_password"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/connection_password"
            android:inputType="number"
            android:typeface="monospace"
            android:width="180sp" />

        <Button
            android:id="@+id/buttonConnect"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="@string/connection_submit" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageRedPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxHeight="220dp"
        android:src="@drawable/beta_256" />

</RelativeLayout>
